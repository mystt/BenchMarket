# Server
PORT=4000

# Database: leave empty (or set to "sqlite") to use SQLite file at data/benchmark.db — no PostgreSQL needed.
# Set to a postgres URL to use PostgreSQL instead.
DATABASE_URL=

# AI — we only ask; no data provided. Keys for models you want to run.
OPENAI_API_KEY=
# ANTHROPIC_API_KEY=

# Hedera (for later deployment)
# HEDERA_OPERATOR_ID=
# HEDERA_OPERATOR_KEY=
# HEDERA_NETWORK=testnet

# Daily bankroll (cents or smallest unit to avoid floats)
BLACKJACK_DAILY_CENTS=10000000
SPORTS_DAILY_CENTS=10000000
CROP_BANKROLL_CENTS=10000000

# Auto-play: AI plays blackjack on a timer (0 = off). e.g. 60000 = every 1 min
AUTO_PLAY_INTERVAL_MS=0
AUTO_PLAY_BET_CENTS=1000
